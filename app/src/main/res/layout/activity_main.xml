<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shinelon.demo.MainActivity">

    <com.example.shinelon.demo.wight.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/demo1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="沉浸模式"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/demo2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="自定义"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/demo3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="DiskLrucache缓存"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/demo4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="Lrucache缓存"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/demo5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="热更新"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/demo6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="Https请求"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/demo7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="Realm数据库使用"
                android:textColor="@android:color/white" />



            <TextView
                android:id="@+id/demo8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="10dp"
                android:text="SVG使用"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </com.example.shinelon.demo.wight.BounceScrollView>
</LinearLayout>
